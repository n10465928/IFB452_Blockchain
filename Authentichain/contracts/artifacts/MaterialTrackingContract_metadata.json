		"devdoc": {
			"details": "- Each material batch is tokenized as a semi-fungible asset.      - Tokens can be consumed (burned) by authorized contracts (e.g., MintContract).      - Off-chain metadata (origin, supplier, certs) is stored per token ID.      - Provides full control to the system authority (Ownable).",
			"kind": "dev",
			"methods": {
				"balanceOf(address,uint256)": {
					"details": "See {IERC1155-balanceOf}. Requirements: - `account` cannot be the zero address."
				},
				"balanceOfBatch(address[],uint256[])": {
					"details": "See {IERC1155-balanceOfBatch}. Requirements: - `accounts` and `ids` must have the same length."
				},
				"burnMaterialFrom(address,uint256,uint256)": {
					"details": "Called by contracts like MintContract during product creation",
					"params": {
						"amount": "Number of tokens to burn (usually 1 per usage)",
						"from": "Address holding the tokens (typically a manufacturer)",
						"id": "Token ID of the material batch"
					}
				},
				"constructor": {
					"details": "ERC1155(\"\") uses an empty base URI. Individual metadata is stored off-chain and indexed via ID."
				},
				"getMaterial(uint256)": {
					"params": {
						"id": "ERC1155 token ID"
					},
					"returns": {
						"_0": "Material struct (origin, supplier, weight, purity, certHash)"
					}
				},
				"isApprovedForAll(address,address)": {
					"details": "See {IERC1155-isApprovedForAll}."
				},
				"mintMaterial(string,string,uint256,string,string)": {
					"details": "Only the contract owner (e.g., regulator) can mint",
					"params": {
						"certHash": "IPFS or HTTPS hash pointing to certificate PDF or doc",
						"origin": "Source location (e.g., country, mine, coordinates)",
						"purity": "Purity percentage or grade of the material",
						"supplier": "Certified supplier name or code",
						"weight": "Quantity of the material in units (used as token count)"
					}
				},
				"owner()": {
					"details": "Returns the address of the current owner."
				},
				"renounceOwnership()": {
					"details": "Leaves the contract without owner. It will not be possible to call `onlyOwner` functions anymore. Can only be called by the current owner. NOTE: Renouncing ownership will leave the contract without an owner, thereby removing any functionality that is only available to the owner."
				},
				"safeBatchTransferFrom(address,address,uint256[],uint256[],bytes)": {
					"details": "See {IERC1155-safeBatchTransferFrom}."
				},
				"safeTransferFrom(address,address,uint256,uint256,bytes)": {
					"details": "See {IERC1155-safeTransferFrom}."
				},
				"setApprovalForAll(address,bool)": {
					"details": "See {IERC1155-setApprovalForAll}."
				},
				"setBaseURI(string)": {
					"details": "Can be used if integrating with an IPFS gateway like Pinata or NFT.storage"
				},
				"setBurnerApproval(address,bool)": {
					"details": "Only the system owner (e.g., regulatory authority) can manage this list",
					"params": {
						"approved": "True to authorize, false to revoke",
						"burner": "Address of the external contract (e.g., MintContract)"
					}
				},
				"supportsInterface(bytes4)": {
					"details": "See {IERC165-supportsInterface}."
				},
				"transferOwnership(address)": {
					"details": "Transfers ownership of the contract to a new account (`newOwner`). Can only be called by the current owner."
				},
				"uri(uint256)": {
					"details": "See {IERC1155MetadataURI-uri}. This implementation returns the same URI for *all* token types. It relies on the token type ID substitution mechanism https://eips.ethereum.org/EIPS/eip-1155#metadata[defined in the EIP]. Clients calling this function must replace the `\\{id\\}` substring with the actual token type ID."
				}
			},
			"title": "MaterialTrackingContract",
			"version": 1
		},
		"userdoc": {
			"kind": "user",
			"methods": {
				"burnMaterialFrom(address,uint256,uint256)": {
					"notice": "Allows authorized contracts to burn material tokens from any holder"
				},
				"constructor": {
					"notice": "Initializes the contract with empty URI and sets msg.sender as system owner."
				},
				"getMaterial(uint256)": {
					"notice": "Retrieves full traceability metadata for a material ID"
				},
				"mintMaterial(string,string,uint256,string,string)": {
					"notice": "Mints a new batch of material tokens to the owner"
				},
				"setBaseURI(string)": {
					"notice": "Allows the owner to override the base URI if using dynamic metadata hosting"
				},
				"setBurnerApproval(address,bool)": {
					"notice": "Grants or revokes permission for a contract to burn material tokens"
				}
			},
			"notice": "Tracks the provenance and lifecycle of raw materials using ERC1155 tokens.",
			"version": 1
		}
